= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :game
    = f.text_field :game
  .field
    = f.label :the_text
    = f.text_field :the_text
  .field
    = f.label :the_time
    = f.datetime_select :the_time
  .actions
    = f.submit 'Save'
