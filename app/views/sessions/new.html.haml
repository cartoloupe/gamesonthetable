.row
  %div.col-md-2.col-md-offset-5
    %p Login and logout
    %p Launch our SPA

.row
  .col-md-3
  .col-md-3
    - unless user_signed_in?
      %p User is not signed in
      %p= link_to "Sign up", new_user_registration_path
      %p= link_to "Login", new_user_session_path
    - else
      %p= "Current user is #{current_user.email}"
      %button= link_to "Logout", destroy_user_session_url, method: :delete

  .col-md-3
    %button
      =  link_to 'Go to a game!', page_path('game')

.row
  .col-md-2.col-md-offset-5{"ng-controller" => "UserController"}
    %p
      {{greeting}}

    %p #{@a}

    %button{"ng-click" => 'getUser()'}
      getUser

