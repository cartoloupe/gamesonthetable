%h1 Listing games

%table.table
  %thead
    %tr
      %th Name
      %th End Time
      %th (Max) Num users
      %th Players
      %th Status
      %th
      %th
      %th

  %tbody
    - @games.each do |game|
      %tr
        %td= game.name
        %td= game.end_time.strftime("%d %b %Y - %l:%M:%S %p %Z") unless game.end_time.nil?
        %td= game.num_users
        %td= game.players.count
        %td= game.status
        %td= link_to 'Show', game
        %td= link_to 'Edit', edit_game_path(game)
        %td= link_to 'Destroy', game, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Game', new_game_path, class: "btn btn-default"
