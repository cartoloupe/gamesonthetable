= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :secs_left
    = f.number_field :secs_left
  .field
    = f.label :num_users
    = f.number_field :num_users
  .field
    = f.label :open
    = f.check_box :open
  .actions
    = f.submit 'Save'
